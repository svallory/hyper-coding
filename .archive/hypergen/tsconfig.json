{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["esnext"],
		"strict": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"pretty": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "./dist",
		"types": ["bun-types"],
		"resolveJsonModule": true,
		"rootDir": "src",
		"baseUrl": ".",
		"skipLibCheck": true,
		"paths": {
			"#": ["src"],
			"#/*": ["src/*"],
			"#tests": ["tests"],
			"#tests/*": ["tests/*"],
			"#fixtures": ["tests/fixtures"],
			"#fixtures/*": ["tests/fixtures/*"],
			"#helpers": ["tests/helpers"],
			"#helpers/*": ["tests/helpers/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.json", ".hypergen.js"],
	"exclude": ["node_modules", "docs"]
}
