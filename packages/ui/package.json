{
	"name": "@hypercli/ui",
	"version": "0.1.0",
	"type": "module",
	"description": "CLI design system for HyperDev â€” full design system with shortcuts, themes, and help rendering",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./shortcuts": {
			"types": "./dist/shortcuts.d.ts",
			"import": "./dist/shortcuts.js"
		},
		"./help": {
			"types": "./dist/help.d.ts",
			"import": "./dist/help.js"
		},
		"./test": {
			"types": "./dist/test/index.d.ts",
			"import": "./dist/test/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"imports": {
		"#tests/*": "./tests/*.ts",
		"#fixtures/*": "./tests/fixtures/*.ts",
		"#*": "./dist/*.js"
	},
	"scripts": {
		"build": "tsc",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check .",
		"format": "biome format . --write",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "bun run build"
	},
	"dependencies": {
		"cli-html": "^5.3.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^20.0.0",
		"typescript": "^5.4.0",
		"vitest": "^1.0.0"
	}
}
