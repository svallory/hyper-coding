{
	"name": "@hypercli/kit",
	"version": "0.1.0",
	"type": "module",
	"description": "Kit lifecycle management for HyperDev",
	"keywords": ["hyperdev", "hypergen", "kits"],
	"author": "Saulo Vallory <saulo@toki.life>",
	"license": "MIT",
	"engines": {
		"node": ">=20"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": ["dist", "help", "oclif.manifest.json", "README.md", "LICENSE"],
	"oclif": {
		"commands": "./dist/commands",
		"topicSeparator": " "
	},
	"imports": {
		"#/*": "./src/*",
		"#tests/*": "./tests/*",
		"#fixtures/*": "./tests/fixtures/*",
		"#helpers/*": "./tests/helpers/*"
	},
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check .",
		"format": "biome format . --write",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "bun run build"
	},
	"dependencies": {
		"@hypercli/core": "workspace:*",
		"giget": "^2.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^20.0.0",
		"@vitest/coverage-v8": "^1.0.0",
		"fs-extra": "^11.3.3",
		"tsup": "^8.0.0",
		"typescript": "^5.4.0",
		"vite-tsconfig-paths": "^6.1.1",
		"vitest": "^1.0.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
