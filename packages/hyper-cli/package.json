{
  "name": "@hypercli/cli",
  "version": "0.0.0",
  "type": "module",
  "description": "HyperDev CLI",
  "keywords": ["hyperdev", "hypergen", "cli"],
  "author": "Saulo Vallory <saulo@toki.life>",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "hyper": "./bin/run.js"
  },
  "imports": {
    "#/*": "./src/*",
    "#/tests/*": "./tests/*",
    "#/fixtures/*": "./tests/fixtures/*",
    "#/helpers/*": "./tests/helpers/*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "format": "biome format . --write",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@hypercli/core": "workspace:*",
    "@hypercli/gen": "workspace:*",
    "@hypercli/kits": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0",
    "tsup": "^8.0.0",
    "vitest": "^1.0.0"
  }
}
