{
	"extends": "../../tsconfig.options.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"#*": ["./src/*.ts"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"],
	"references": [{ "path": "../core" }, { "path": "../ui" }]
}
