{
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es2022": true
  },
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": [
              "../*"
            ],
            "message": "Relative imports using ../ are not allowed. Use #/ path aliases instead, or use ./ for same-directory imports."
          },
          {
            "group": [
              "../../*"
            ],
            "message": "Relative imports using ../ are not allowed. Use #/ path aliases instead."
          }
        ]
      }
    ]
  }
}
