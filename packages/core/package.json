{
	"name": "@hypercli/core",
	"version": "0.1.0",
	"type": "module",
	"description": "Core domain types, config, errors for HyperDev",
	"keywords": ["hyperdev", "hypergen", "code-generator"],
	"author": "Saulo Vallory <saulo@toki.life>",
	"license": "MIT",
	"engines": {
		"node": ">=20"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": ["dist", "README.md", "LICENSE"],
	"imports": {
		"#parsers": "./dist/parsers/index.js",
		"#parsers/*": "./dist/parsers/*.js",
		"#types": "./dist/types/index.js",
		"#types/*": "./dist/types/*.js",
		"#logger": "./dist/logger/index.js",
		"#logger/*": "./dist/logger/*.js",
		"#config": "./dist/config/index.js",
		"#config/*": "./dist/config/*.js",
		"#utils": "./dist/utils/index.js",
		"#utils/*": "./dist/utils/*.js",
		"#errors": "./dist/errors/index.js",
		"#errors/*": "./dist/errors/*.js",
		"#tests/*": "./tests/*.ts",
		"#fixtures/*": "./tests/fixtures/*.ts",
		"#*": "./dist/*.js"
	},
	"scripts": {
		"build": "tsc",
		"test": "vitest run",
		"test:bun": "bun test --env-file .env.test",
		"test:watch": "vitest",
		"lint": "biome check .",
		"format": "biome format . --write",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "bun run build"
	},
	"dependencies": {
		"@hypercli/ui": "workspace:*",
		"chalk": "^4.1.2",
		"change-case": "^3.1.0",
		"cosmiconfig": "^9.0.0",
		"debug": "^4.3.4",
		"inflection": "^3.0.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^20.0.0",
		"typescript": "^5.4.0",
		"vitest": "^1.0.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
