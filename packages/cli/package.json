{
	"name": "@hypercli/cli",
	"version": "0.1.0",
	"type": "module",
	"description": "HyperDev CLI",
	"keywords": ["hyperdev", "hypergen", "cli"],
	"author": "Saulo Vallory <saulo@toki.life>",
	"license": "MIT",
	"engines": {
		"node": ">=20"
	},
	"bin": {
		"hyper": "./bin/run.js"
	},
	"imports": {
		"#commands/*": "./dist/commands/*.js",
		"#help/*": "./dist/help/*.js",
		"#tests/*": "./tests/*.ts",
		"#fixtures/*": "./tests/fixtures/*.ts",
		"#helpers/*": "./tests/helpers/*.ts",
		"#*": "./dist/*.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": ["dist", "bin", "help", "README.md", "LICENSE"],
	"oclif": {
		"bin": "hyper",
		"dirname": "hyper",
		"commands": "./dist/commands",
		"helpClass": "./dist/help/custom-help",
		"plugins": [
			"@hypercli/gen",
			"@hypercli/kit",
			"@oclif/plugin-help",
			"@oclif/plugin-autocomplete",
			"@oclif/plugin-commands",
			"@oclif/plugin-version",
			"@oclif/plugin-warn-if-update-available"
		],
		"warn-if-update-available": {
			"timeoutInDays": 7
		},
		"topicSeparator": " "
	},
	"scripts": {
		"build": "tsc",
		"dev": "bun run bin/dev.js",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check .",
		"format": "biome format . --write",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "bun run build"
	},
	"dependencies": {
		"@hypercli/core": "workspace:*",
		"@hypercli/gen": "workspace:*",
		"@hypercli/kit": "workspace:*",
		"@hypercli/ui": "workspace:*",
		"@oclif/core": "^4.8.0",
		"@oclif/plugin-autocomplete": "^3.2.40",
		"@oclif/plugin-commands": "^4.1.40",
		"@oclif/plugin-help": "^6.2.37",
		"@oclif/plugin-version": "^2.2.36",
		"@oclif/plugin-warn-if-update-available": "^3.1.55",
		"chalk": "^4.1.2",
		"fx": "^39.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^20.0.0",
		"@vitest/coverage-v8": "1.6.1",
		"execa": "^9.6.1",
		"fs-extra": "^11.3.3",
		"typescript": "^5.4.0",
		"vitest": "^1.0.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
