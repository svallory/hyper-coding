---
to: package.json
---
{
  "private": true,
  "name": "@{{ project_name | default: 'monorepo' }}/root",
  "version": "0.0.0",
  "workspaces": [
    {%- for type in project_types %}
    "{{ type }}/*"{% unless forloop.last %},{% endunless %}
    {%- endfor %}
  ],
  "scripts": {
    "build": "moon run :build",
    "check": "moon run :typecheck :test :lint",
    "clean": "moon run :clean",
    "dev": "moon run :dev",
    "lint": "moon run :lint",
    "test": "moon run :test",
    "typecheck": "moon run :typecheck",
    {%- if package_manager == "npm" %}
    "deps": "npm update",
    {%- elsif package_manager == "yarn" %}
    "deps": "yarn upgrade-interactive",
    {%- elsif package_manager == "pnpm" %}
    "deps": "pnpm update -i --latest -r",
    {%- elsif package_manager == "bun" %}
    "deps": "bun update",
    {%- endif %}
    "moon": "moon --color"
  },
  "devDependencies": {
    {%- if platform == "node" %}
    "@types/node": "^20.11.16",
    {%- endif %}
    {%- if tools contains "eslint" %}
    "eslint": "^8.56.0",
    "eslint-config-moon": "^2.0.15",
    {%- endif %}
    {%- if tools contains "jest" %}
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-preset-moon": "^2.0.7",
    {%- endif %}
    {%- if tools contains "packemon" %}
    "packemon": "^3.2.3",
    {%- endif %}
    {%- if tools contains "prettier" %}
    "prettier": "^3.2.4",
    "prettier-config-moon": "^1.1.2",
    {%- if tools contains "sveltekit" %}
    "prettier-plugin-svelte": "^3.1.2",
    {%- endif %}
    {%- endif %}
    {%- if tools contains "typescript" %}
    "tsconfig-moon": "^1.3.0",
    "typescript": "^5.4.0",
    {%- endif %}
    "@moonrepo/cli": "latest"
  },
  {%- if platform == "node" %}
  "engines": {
    "node": "20.11.0"
  }
  {%- endif %}
}
