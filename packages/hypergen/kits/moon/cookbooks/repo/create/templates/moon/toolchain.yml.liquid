---
to: moon/toolchain.yml
---
$schema: "https://moonrepo.dev/schemas/toolchain.json"

# Configures Node.js
{%- if platform == "node" %}
node:
  version: "20.11.0"
  {%- if package_manager != "npm" %}
  packageManager: {{ package_manager }}
  {%- endif %}
  {%- if tools contains "typescript" %}

  # Configures TypeScript
  typescript:
    routeOutDirToCache: true
    syncProjectReferences: true
  {%- endif %}
{%- endif %}

# Configures Deno
{%- if platform == "deno" %}
deno:
  version: "1.40.0"
  {%- if tools contains "typescript" %}

  # TypeScript is built-in with Deno
  typescript:
    syncProjectReferences: true
  {%- endif %}
{%- endif %}

# Configures Bun
{%- if platform == "bun" %}
bun:
  version: "1.0.26"
  {%- if tools contains "typescript" %}

  # TypeScript is built-in with Bun
  typescript:
    syncProjectReferences: true
  {%- endif %}
{%- endif %}