---
to: moon/workspace.yml
---
$schema: "https://moonrepo.dev/schemas/workspace.json"

# Require a specific version of moon while running commands, otherwise fail.
versionConstraint: '>=1.22.2'

# A map of all projects found within the workspace, or a list or file system globs.
projects:
{%- for type in project_types %}
  - "{{ type }}/*/moon.yml"
{%- endfor %}

vcs:
  manager: "git"
  defaultBranch: "main"

runner:
  archivableTargets:
    - ":format"
    - ":lint"
    - ":test"
    - ":typecheck"

  logRunningCommand: true

generator:
  templates:
    - './.moon/templates'