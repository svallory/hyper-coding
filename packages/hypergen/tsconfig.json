{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["esnext"],
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "pretty": true,
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["bun-types"],
    "resolveJsonModule": true,
    "rootDir": "src",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".hypergen.js"],
  "exclude": ["node_modules", "hygen.io"]
}
