{
	"name": "hypergen",
	"version": "8.0.0",
	"description": "The scalable code generator that saves you time.",
	"keywords": [
		"template",
		"generator",
		"hygen",
		"boilerplate",
		"redux",
		"react"
	],
	"author": {
		"name": "Saulo Vallory",
		"email": "saulo@toki.life",
		"url": "https://saulo.engineer"
	},
	"contributors": [
		{
			"name": "Dotan J. Nahum (original author)",
			"email": "dn@rng0.io",
			"url": "https://medium.com/@jondot"
		}
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/svallory/hypergen.git"
	},
	"main": "dist/index.js",
	"bin": {
		"hypergen": "./bin/run.js"
	},
	"type": "module",
	"oclif": {
		"bin": "hypergen",
		"dirname": "hypergen",
		"commands": "./dist/commands",
		"hooks": {
			"command_not_found": "./dist/hooks/command-not-found"
		},
		"plugins": [
			"@oclif/plugin-help"
		],
		"topics": {
			"kit": {
				"description": "Manage kits (installable bundles of cookbooks)"
			},
			"cookbook": {
				"description": "Manage cookbooks (collections of related recipes)"
			},
			"recipe": {
				"description": "Work with recipes (code generation workflows)"
			},
			"config": {
				"description": "Configuration management"
			},
			"system": {
				"description": "System information and diagnostics"
			}
		},
		"topicSeparator": " "
	},
	"files": [
		"bin",
		"dist",
		"oclif.manifest.json"
	],
	"scripts": {
		"standalone": "rm -rf standalone; bun run build:lib && bun pkg package.json --out-path standalone && bun scripts/standalone.js",
		"standalone:brew-sha": "shasum -a 256 standalone/*.macos.*.tar.gz",
		"build:changelog": "bunx conventional-changelog -i CHANGELOG.md -p angular -s",
		"build:lib": "bun run tsc && cp src/ai/prompt-template.jig dist/ai/prompt-template.jig",
		"prebuild": "echo 'Building...'",
		"build": "bun run build:lib && bun run build:changelog && bun run manifest",
		"postbuild": "echo 'Done building!'",
		"manifest": "oclif manifest",
		"prepack": "bun run build",
		"test:win32": "bun test --testPathIgnorePatterns '.*metaverse-conditional.*'",
		"test": "bun test --coverage --exclude-v8-coverage=false --exclude=dist/**",
		"test:code": "bun test",
		"test:require": "time node -e 'require(\"./dist/index.js\")'",
		"watch": "bun test --watch",
		"hypergen": "./bin/dev.js",
		"hypergen:build": "./bin/run.js",
		"docs:prepare": "cd hygen.io && bun install",
		"docs:watch": "cd hygen.io && bun start",
		"docs:build": "cd hygen.io && bun run build",
		"docs:publish": "cd hygen.io && bun run deploy",
		"docs:api": "bun run build:lib && api-extractor run --local && node /work/hyperdev/apps/mintlify-tsdocs/bin/mintlify-tsdocs markdown -i temp -o /work/hyperdev/apps/docs/sdk-reference/hypergen --docs-json /work/hyperdev/apps/docs/docs.json --tab-name 'SDK Reference'",
		"docs:api:watch": "echo 'Watch mode not yet supported for api-documenter'",
		"docs:typedoc": "bun run build:lib && typedoc",
		"docs:typedoc:watch": "bun run build:lib && typedoc --watch"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"@dotenvx/dotenvx": "^1.52.0",
		"@hyper-kits/nextjs": "github:hyper-kits/nextjs",
		"@jig-lang/jig": "^1.0.1",
		"@microsoft/api-extractor": "^7.55.0",
		"@oclif/core": "^4",
		"@oclif/plugin-help": "^6",
		"@oclif/plugin-not-found": "^3",
		"@types/node": "^17.0.45",
		"ai": "^4.0.0",
		"ajv": "^8.17.1",
		"chalk": "^4.1.2",
		"change-case": "^3.1.0",
		"debug": "^4.4.3",
		"degit": "^2.8.4",
		"enquirer": "^2.4.1",
		"execa": "^5.1.1",
		"front-matter": "^4.0.2",
		"fs-extra": "^10.1.0",
		"glob": "^11.0.3",
		"ignore-walk": "^4.0.1",
		"inflection": "^1.13.4",
		"js-yaml": "^4.1.0",
		"oclif": "^4.22.77",
		"ora": "^5.4.1",
		"typedoc-theme-mintlify": "workspace:*",
		"yaml": "^2.8.1",
		"yargs-parser": "^21.1.1",
		"zod": "^3.22.0"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/react": "latest",
		"bun-types": "latest",
		"conventional-changelog-cli": "^2.2.2",
		"dir-compare": "^4.2.0",
		"eslint-plugin-prettier": "^5.5.4",
		"gh-pages": "^3.2.3",
		"jscpd": "^4.0.7",
		"madge": "^8.0.0",
		"nodemon": "^3.1.11",
		"pkg": "^5.8.1",
		"react": "17.0.2",
		"stylomatic": "^0.3.2",
		"time-require": "^0.1.2",
		"ts-node": "^10.9.2",
		"typedoc": "^0.28.14",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4",
		"zeroconf-typescript-eslint": "^2.4.0"
	},
	"nodemonConfig": {
		"ignore": ["**/test/**", "**/docs/**"],
		"delay": 500
	},
	"pkg": {
		"scripts": "dist/**/*.js",
		"assets": "src/**/*",
		"outPath": "standalone",
		"targets": ["node17-macos", "node17-linux", "node17-win"]
	},
	"peerDependencies": {
		"@ai-sdk/anthropic": "^1.0.0",
		"@ai-sdk/openai": "^1.0.0"
	},
	"peerDependenciesMeta": {
		"@ai-sdk/anthropic": {
			"optional": true
		},
		"@ai-sdk/openai": {
			"optional": true
		}
	},
	"engines": {
		"node": ">=14.18.0"
	},
	"overrides": {
		"chalk": "4.1.2"
	},
	"test": {
		"coverage": {
			"exclude": ["dist/**"]
		}
	}
}
