export type Input = {
  bg?: string | 'transparent';
  fill?: string | 'transparent';
  pos?: 'tl' | 'tr' | 'bl' | 'br';
  dir?: 'tl' | 'tr' | 'bl' | 'br';

  style?: string;
  class?: string;
  width?: string;
  height?: string;
}

<let/svgStyle=
  (input.bg ? `background-color: ${input.bg};` : '') +
  (input.width ? `width: ${input.width};` : '') +
  (input.height ? `height: ${input.height};` : '') +
  (input.style || "")
/>

<div class=`quarter ${input.pos ? `abs pos-${input.pos}` : ""} dir-${input.dir ?? "tl"} ${input.class ?? ""}` style=svgStyle>
  <div class="fill" style=`background-color: ${ input.fill ?? 'transparent' };`></div>
</div>

