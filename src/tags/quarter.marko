style.scss --
  .quarter {
    &.abs {
      position: absolute;
    }

    & .fill {
      width: 100%;
      height: 100%;
    }

    &.pos-tl {
      top: 0;
      left: 0;
    }

    &.dir-tl .fill {
      border-radius: 100% 0 0;
    }

    &.pos-tr {
      top: 0;
      right: 0;
    }

    &.dir-tr .fill {
      border-radius: 100% 0 0;
      scale: -1 1;
    }

    &.pos-bl {
      bottom: 0;
      left: 0;
    }

    &.dir-bl .fill {
      border-radius: 100% 0 0;
      scale: 1 -1;
    }

    &.pos-br {
      bottom: 0;
      right: 0;
    }

    &.dir-br .fill {
      border-radius: 100% 0 0;
      scale: -1 -1;
    }
  }